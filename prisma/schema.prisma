generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Project {
  id                   Int             @id @default(autoincrement())
  title                String
  short_description    String
  detailed_description String
  date                 DateTime
  languages            String[]
  github_repo          String?
  website              String?
  contributions        Credit_Person[] @relation("Credit_PersonToProject")

  @@map("projects")
}

model Credit_Person {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  github   String?
  linkedin String?
  projects Project[] @relation("Credit_PersonToProject")

  @@map("credit_person")
}
